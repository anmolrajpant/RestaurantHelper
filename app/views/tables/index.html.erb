<h1>Tables#index</h1>
<p>Find me in app/views/tables/index.html.erb</p>

<%= link_to 'Add table', new_table_path %><br>
<table>
	<thead>
		<tr>
          <th>Table No</th>
          <th>Customer Name</th>
          <th colspan="3"></th>
        </tr>
	</thead>
	<tbody>
		<% @tables.each do |table| %>
  			<tr>
    			<td><%= table.tableNo %></td>
    			<td><%= table.customerName %></td>
    			<td><%= link_to 'Take order', new_table_order_path(table.id) %></td>
    			<td><%= link_to 'Pay bill', table_orders_path(table.id) %></td>
    			<td><%= link_to 'Return table', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  			</tr>
	</tbody>
	
<% end %>
</table>
